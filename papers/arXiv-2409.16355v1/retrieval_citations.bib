	note = {Publisher: The American Astronomical Society},
	pages = {4},
	file = {IOP Full Text PDF:/Users/yoav/Zotero/storage/I9QSAKEW/Yip et al. - 2020 - On the Compatibility of Ground-based and Space-bas.pdf:application/pdf},
}

