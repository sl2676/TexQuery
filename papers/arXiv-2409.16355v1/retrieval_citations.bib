	pages = {252--265},
	file = {IEEE Xplore Abstract Record:/Users/yoav/Zotero/storage/EQ8MBXVZ/7130620.html:text/html;IEEE Xplore Full Text PDF:/Users/yoav/Zotero/storage/QVQHAQC9/Ambikasaran et al. - 2016 - Fast Direct Methods for Gaussian Processes.pdf:application/pdf},
