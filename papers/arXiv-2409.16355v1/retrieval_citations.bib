	keywords = {interiors, evolution, material properties, structure},
	pages = {20130076},
	file = {Full Text PDF:/Users/yoav/Zotero/storage/KER6QRLA/Stixrude - 2014 - Melting in super-earths.pdf:application/pdf},
}

