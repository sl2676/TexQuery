@misc{fournier-tondreau_near-infrared_2023,
	title = {Near-{Infrared} {Transmission} {Spectroscopy} of {HAT}-{P}-18 b with {NIRISS}: {Disentangling} {Planetary} and {Stellar} {Features} in the {Era} of {JWST}},
