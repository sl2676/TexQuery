	note = {Publisher: American Astronomical Society},
	pages = {194},
	file = {IOP Full Text PDF:/Users/yoav/Zotero/storage/CZX66KPB/Fauchez et al. - 2019 - Impact of Clouds and Hazes on the Simulated JWST T.pdf:application/pdf},
