%%%%%%%%%%%%%%%%%%%%%%% Numbering Format

%% Default Counters
\def\thepart{\@Roman\c@part}
\def\theSect {\@Alph\c@Sect}
\def\thechapter{\if@NumberedChapter\@arabic\c@chapter\fi}
\def\thesection {\if@NumberedChapter\@arabic\c@chapter.\fi\@arabic\c@section}
\def\thesubsection{\thesection.\@arabic\c@subsection}
\def\thesubsubsection{\thesubsection.\@arabic\c@subsubsection}
%\AtBeginDocument{\def\tagform@#1{\maketag@@@{(\ignorespaces#1\unskip\@@italiccorr)}}}
\def\theequation{\@arabic\c@equation}
\def\thefigure{\@arabic\c@figure}
\def\thetable{\@arabic\c@table}
\def\thebox{\thechapter.\@arabic\c@box}
\def\thetextbox{\thechapter.\@arabic\c@textbox}

%% Customizing the symbols
\def\@fnsymbol#1{\ensuremath{\ifcase#1\or *\or **\or \dagger\or \ddagger\or
   \mathsection\or \mathparagraph\or \|\or \dagger\dagger
   \or \ddagger\ddagger \else\@ctrerr\fi}}

%% For Spellout Numbers for Parts
\@spelloutfalse %% Switch true/false
\def\@spellout#1{\ifcase#1\or One \or Two \or Three \or Four \or Five \or Six \or Seven \or Eight \or Nine \or
Ten \or Eleven \or Twelve \or Thirteen \or Fourteen \or Fifteen \or Sixteen \or Seventeen \or Eighteen \or Nineteen \or Twenty\fi}

%% Switch for Continuous and Chapterwise Counters (disable the below for Continous numbering)
\@addtoreset{figure}{chapter}
\@addtoreset{table}{chapter}
\@addtoreset{equation}{chapter}
\@addtoreset{footnote}{chapter}
\@addtoreset{box}{chapter}
\@addtoreset{textbox}{chapter}

%% Affiliation and Opening footnotes numbering
\affilnumbering{alph}           %% Numbering style for Addresses
\chapfootnotenumbering{arabic}      %% Numbering style for Chapter footnote
\aufootnotenumbering{arabic}        %% Numbering style for Author footnote
\currauthornumbering{alph}          %% Numbering style for Curresponding author

